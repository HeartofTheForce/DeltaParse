{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "dotnet build -p:GenerateFullPaths=true",
        "options": {
          "cwd": "src/DeltaParse"
        },
        "type": "shell",
        "problemMatcher": "$msCompile"
      },
      {
        "label": "run tests",
        "command": "find . -name '*.Tests.csproj' | xargs dotnet test",
        "type": "shell",
        "problemMatcher": "$msCompile",
        "dependsOn": "build tests"
      },
    ]
}